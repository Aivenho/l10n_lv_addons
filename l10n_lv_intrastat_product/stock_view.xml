<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Add Type of transport and department on picking form view -->
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">lv.intrastat.product.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="backorder_id" position="after">
                    <field name="intrastat_transport"/>
                </field>
                <field name="company_id" position="after">
                    <field name="intrastat_type_id" domain="[('object_type', '=', picking_type_code)]" attrs="{'invisible': [('invoice_state', '!=', 'none')]}" context="{'default_object_type': picking_type_code}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
