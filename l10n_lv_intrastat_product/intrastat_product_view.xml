<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Main Menu entry for Intrastat Reports -->
        <menuitem id="menu_intrastat_base_root" name="Intrastat Reporting" parent="account.menu_finance_legal_statement"/>

        <!-- Form view of DEB, with integrated form+tree view of lines -->
        <record id="lv_intrastat_product_form" model="ir.ui.view">
            <field name="name">lv.intrastat.product.form</field>
            <field name="model">report.intrastat.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button icon="gtk-ok" name="done" string="Done" type="object" colspan="1" states="draft" class="oe_highlight"/>
                        <button icon="gtk-convert" name="back2draft" string="Back to draft" type="object" colspan="1" states="done"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group col="6">
                        <group>
                            <field name="start_date" on_change="onchange_start_date(start_date)"/>
                            <field name="end_date"/>
                            <field name="date_done" attrs="{'invisible': [('state','!=','done')]}"/>
                        </group>
                        <group>
                            <field name="type" on_change="type_on_change(company_id, type)"/>
                            <field name="obligation_level"/>
                            <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="num_lines"/>
                            <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="total_fiscal_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <label for="notes"/>
                    <field name="notes"/>
                    <button icon="gtk-execute" name="generate_product_lines_from_invoice" string="Generate lines from invoices" type="object" states="draft" colspan="2"/>
                    <button icon="gtk-execute" name="generate_product_lines_from_picking" string="Generate repair lines from picking" type="object" colspan="1" states="draft" />
                    <button icon="gtk-go-forward" name="generate_xml" string="Eksport to XML" type="object" colspan="2"/>
                    <field name="intrastat_line_ids" nolabel="1" colspan="4" context="{'default_state': state, 'default_type': type}">
                        <tree string="Intrastat product lines">
                            <field name="intrastat_code" string="C.N. code"/>
                            <field name="partner_country_code" string="Partner C."/>
                            <field name="amount_company_currency" string="Value CC"/>
                            <field name="company_currency_id" string="Comp. Cur."/>
                            <field name="weight"/>
                            <field name="quantity" string="Qty"/>
                            <field name="intrastat_uom_id" string="Intra. UoM"/>
                            <field name="transaction_code" string="Transac."/>
                            <field name="transport" string="Transport"/>
                            <field name="product_country_origin_code" string="Product C/O"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                            <field name="picking_id"/>
                            <field name="incoterm_code"/>
                            <field name="state" invisible="1"/>
                            <field name="type" invisible="1"/>
                        </tree>
                        <form string="Intrastat product lines">
                            <group string="Information to declare">
                                <field name="intrastat_type_id" required="1" on_change="intrastat_type_on_change(intrastat_type_id, parent.type, parent.obligation_level)" domain="[('intrastat_product_type', '=', parent.type)]" context="{'default_intrastat_product_type': parent.type}"/>
                                <field name="intrastat_code_id" on_change="intrastat_code_on_change(intrastat_code_id)"/>
                                <field name="intrastat_code"/>
                                <field name="partner_country_id" domain="[('intrastat', '=', True)]"/>
                                <newline/>
                                <field name="amount_company_currency"/>
                                <field name="company_currency_id" nolabel="1"/>
                                <newline/>
                                <field name="weight"/>
                                <field name="quantity"/>
                                <field name="intrastat_uom_id"/>
                                <field name="transaction_code"  />
                                <field name="product_country_origin_id" attrs="{'readonly': [('type', '=', 'export')]}"/>
                                <field name="transport"/>
                                <field name="partner_id" attrs="{'readonly': [('type', '=', 'import')]}"/>
                                <field name="incoterm_code"/>
                            </group>
                            <group string="Additionnal information">
                                <field name="invoice_id"/>
                                <field name="picking_id"/>
                                <newline/>
                                <field name="amount_invoice_currency"/>
                                <field name="invoice_currency_id"/>
                                <newline/>
                                <field name="amount_product_value_inv_cur"/>
                                <field name="amount_accessory_cost_inv_cur"/>
                                <newline/>
                                <field name="source_uom_id"/>
                                <field name="parent_id" invisible="1"/>
                                <field name="state" invisible="1"/>
                                <field name="type" invisible="1"/>
                            </group>
                        </form>
                    </field>
                </form>
            </field>
        </record>

        <!-- Tree view for DEB -->
        <record id="lv_intrastat_product_tree" model="ir.ui.view">
            <field name="name">lv.intrastat.product.tree</field>
            <field name="model">report.intrastat.product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Intrastat Product" colors="blue:state=='draft'">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="type"/>
                    <field name="obligation_level"/>
                    <field name="num_lines"/>
                    <field name="total_amount" sum="Total amount"/>
                    <field name="total_fiscal_amount" sum="Total fiscal amount"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <button icon="gtk-ok" name="done" string="Done" type="object" colspan="1" states="draft"/>
                </tree>
            </field>
        </record>


        <!-- Search view for DEB -->
        <record id="lv_intrastat_product_search" model="ir.ui.view">
            <field name="name">lv.intrastat.product.search</field>
            <field name="model">report.intrastat.product</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Import" domain="[('type', '=', 'import')]" icon="terp-gtk-go-back-ltr"/>
                    <filter string="Export" domain="[('type', '=', 'export')]" icon="terp-gtk-go-back-rtl"/>
                    <separator orientation="vertical"/>
                    <filter string="Draft" domain="[('state', '=', 'draft')]" icon="terp-folder-orange"/>
                    <filter string="Done" domain="[('state', '=', 'done')]" icon="terp-folder-green"/>
                    <separator orientation="vertical"/>
                    <field name="start_date"/>
                    <newline />
                    <group expand="False" string="Extended Filters...">
                        <field name="total_amount"/>
                        <field name="total_fiscal_amount"/>
                        <field name="num_lines"/>
                        <field name="obligation_level"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action related -->
        <record id="lv_intrastat_product_tree_action" model="ir.actions.act_window">
            <field name="name">Intrastat Product</field>
            <field name="res_model">report.intrastat.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Intrastat product menu -->
        <menuitem id="lv_intrastat_product_menu" parent="menu_intrastat_base_root" action="lv_intrastat_product_tree_action"/>

        <!-- Intrastat Reports XML form -->
        <record id="report_intrastat_product_xml_form" model="ir.ui.view">
            <field name="name">report.intrastat.product.xml.form</field>
            <field name="model">report.intrastat.product.xml</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Intrastat Reports">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="data_xml" filename="filename"/>
                            <field name="company_id"/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Intrastat Reports XML tree -->
        <record id="report_intrastat_product_xml_tree" model="ir.ui.view">
            <field name="name">report.intrastat.product.xml.tree</field>
            <field name="model">report.intrastat.product.xml</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Intrastat Reports">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- Intrastat Reports XML action -->
        <record id="lv_intrastat_product_reports_action" model="ir.actions.act_window">
            <field name="name">Intrastat Reports</field>
            <field name="res_model">report.intrastat.product.xml</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Intrastat Reports XML menu -->
        <menuitem id="lv_intrastat_product_report_menu" parent="menu_intrastat_base_root" action="lv_intrastat_product_reports_action"/>

    </data>
</openerp>