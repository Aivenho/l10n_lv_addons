<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="cash_book_document">
    <t>
        <div class="page">
            <style type="text/css">
                div.title {
                    font-size: 18px;
                    font-weight: bold;
                    text-align: center;
                    margin-top: 20px;
                    margin-bottom: 20px;
                }
                div.balance {
                    font-weight: bold;
                    text-align: right;
                    float: right;
                    font-size: 16px;
                }
                table.list td, th {
                    padding-top: 2px;
                    padding-bottom: 2px;
                    padding-left: 4px;
                    padding-right: 4px;
                }
                table.list th {
                    font-weight: normal;
                }
            </style>
            <div class="title">
                <div>
                    <span>Kases slēgums:</span>
                    <span t-field="o.name"/>
                </div>
                <div>
                    <span t-field="o.date"/>
                </div>
                <div>
                    <span>Kase:</span>
                    <span t-field="o.journal_id.name"/>
                </div>
            </div>
            <div class="balance">
                <span>Altikums dienas sākumā:</span>
                <span t-esc="formatLang(o.balance_start)"/>
            </div>
            <br/>
            <br/>
            <table width="100%" class="list">
                <thead>
                    <tr style="border: 1px solid black;">
                        <th style="border-right: 1px solid black;">Ordera Nr.</th>
                        <th style="border-right: 1px solid black;">No kā saņemts vai kam izsniegts</th>
                        <th style="border-right: 1px solid black;">Ieņēmumi, EUR</th>
                        <th>Izdevumi, EUR</th>
                    </tr>
                    <tr>
                        <th style="color: white; font-size: 10px; padding-top: 0px !important; padding-bottom: 0px !important;">...</th>
                        <th style="color: white; font-size: 10px; padding-top: 0px !important; padding-bottom: 0px !important;">...</th>
                        <th style="color: white; font-size: 10px; padding-top: 0px !important; padding-bottom: 0px !important;">...</th>
                        <th style="color: white; font-size: 10px; padding-top: 0px !important; padding-bottom: 0px !important;">...</th>
                    </tr>
                </thead>
                <tbody style="border: 1px solid black;">
                    <tr t-foreach="o.line_ids" t-as="l">
                        <td style="border-right: 1px solid black;">
                            <span t-field="l.ref"/>
                        </td>
                        <td style="border-right: 1px solid black;">
                            <span t-field="l.partner_id.name"/>
                        </td>
                        <td style="border-right: 1px solid black; text-align: right;">
                            <span t-esc="(l.amount >= 0) and formatLang(l.amount) or ''"/>
                        </td>
                        <td style="text-align: right;">
                            <span t-esc="(l.amount &lt; 0) and formatLang(l.amount) or ''"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br/>
            <div class="balance">
                <div>
                    <span>Apgrozījums:</span>
                    <span t-esc="formatLang(o.total_entry_encoding)"/>
                </div>
                <div>
                    <span>Atlikums dienas beigās:</span>
                    <span t-esc="formatLang(o.balance_end)"/>
                </div>
            </div>
            <br/>
            <br/>
            <br/>
            <br/>
            <table width="100%">
                <tbody>
                    <tr>
                        <td width="50%"></td>
                        <td width="30%" class="text-right">Kasieris:</td>
                        <td width="20%"></td>
                    </tr>
                    <tr>
                        <td>Ieraksti kases grāmatā tika pārbaudīti un saņemti:</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <span>ieņēmumu orderi</span>
                            <span>-</span>
                            <span t-esc="line_count(o.line_ids)['income']"/>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <span>izdevumu orderi</span>
                            <span>-</span>
                            <span t-esc="line_count(o.line_ids)['expense']"/>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="text-right">Grāmatvedis:</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</template>

<template id="cash_book">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'user_id.lang', 'l10n_lv_account.cash_book_document')"/>
        </t>
    </t>
</template>

</data>
</openerp>