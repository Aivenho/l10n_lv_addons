<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="cash_book_document">
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>

            <h2>
                <span>Kases slēgums: </span><span t-field="o.name"/>
            </h2>
            <h2>
                <span t-field="o.date"/>
            </h2>
            <h2>
                <span>Kase: </span><span t-field="o.journal_id.name"/>
            </h2>

            <div class="row mt32 mb32">
                <div>
                    <span><strong>Altikums dienas sākumā: </strong></span><span t-field="o.balance_start"/>
                </div>
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Ordera Nr.</th>
                        <th>No kā saņemts vai kam izsniegts</th>
                        <th>Ieņēmumi, EUR</th>
                        <th>Izdevumi, EUR</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.line_ids" t-as="l">
                        <td>
                            <span t-field="l.ref"/>
                        </td>
                        <td>
                            <span t-field="l.partner_id.name"/>
                        </td>
                        <td class="text-right">
                            <span t-if="l.amount >= 0"><span t-field="l.amount"/></span>
                        </td>
                        <td class="text-right">
                            <span t-if="l.amount &lt; 0"><span t-field="l.amount"/></span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row mt32 mb32">
                <div>
                    <span><strong>Apgrozījums: </strong></span><span t-field="o.total_entry_encoding"/>
                </div>
            </div>
            <div class="row mt32 mb32">
                <div>
                    <span><strong>Atlikums dienas beigās: </strong></span><span t-field="o.balance_end"/>
                </div>
            </div>
            <table>
                <tbody>
                    <tr>
                        <td width="50%"></td>
                        <td width="30%" class="text-right">Kasieris:</td>
                        <td width="20%"></td>
                    </tr>
                    <tr>
                        <td>Ieraksti kases grāmatā tika pārbaudīti un saņemti:</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><span>ieņēmumu orderi - </span><span t-esc="line_count(o.line_ids)['income']"/></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><span>izdevumu orderi - </span><span t-esc="line_count(o.line_ids)['expense']"/></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="text-right">Grāmatvedis:</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="cash_book">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'user_id.lang', 'l10n_lv_account.cash_book_document')"/>
        </t>
    </t>
</template>

</data>
</openerp>