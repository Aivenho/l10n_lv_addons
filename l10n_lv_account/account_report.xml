<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Account Paperformat Portrait -->

        <record id="report_paperformat_account_portrait" model="report.paperformat">
            <field name="name">Account Portrait</field>
            <field name="margin_top" eval="10"/>
            <field name="margin_left" eval="20"/>
            <field name="margin_bottom" eval="10"/>
            <field name="margin_right" eval="10"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
        </record>

        <!-- Cash Book -->

        <report auto="False"
                id="report_account_cash_book_l10n_lv"
                string="Cash Book"
                model="account.bank.statement"
                name="l10n_lv_account.cash_book"
                file="l10n_lv_account.cash_book"
                report_type="qweb-pdf"/>

        <record id="l10n_lv_account.report_account_cash_book_l10n_lv" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account.report_paperformat_account_portrait"/>
        </record>

        <!-- Cash Order -->

        <report auto="False"
                id="report_account_cash_order_l10n_lv"
                string="Order from Cash Register"
                model="account.cash.order.report"
                name="l10n_lv_account.cash_order"
                file="l10n_lv_account.cash_order"
                report_type="qweb-pdf"/>

        <record id="l10n_lv_account.report_account_cash_order_l10n_lv" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account.report_paperformat_account_portrait"/>
        </record>

        <!-- Invoice List -->

        <report auto="False"
                id="report_account_invoice_list_l10n_lv"
                string="List of Invoices"
                model="account.invoice"
                name="l10n_lv_account.invoice_list"
                file="l10n_lv_account.invoice_list"
                report_type="qweb-pdf"/>

        <record id="l10n_lv_account.report_account_invoice_list_l10n_lv" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account.report_paperformat_account_portrait"/>
        </record>

        <!-- Account Chart -->

        <report auto="False"
                id="report_account_chart_l10n_lv"
                string="Chart of Accounts"
                model="account.account"
                name="l10n_lv_account.account_chart"
                file="l10n_lv_account.account_chart"
                report_type="qweb-pdf"/>

        <record id="l10n_lv_account.report_account_chart_l10n_lv" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account.report_paperformat_account_portrait"/>
        </record>

        <!-- Invoice LV -->

        <report auto="False"
                id="report_account_invoice_l10n_lv"
                string="Invoice LV"
                model="account.invoice"
                name="l10n_lv_account.invoice_lv"
                file="l10n_lv_account.invoice_lv"
                report_type="qweb-pdf"/>

        <record id="l10n_lv_account.report_account_invoice_l10n_lv" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account.report_paperformat_account_portrait"/>
        </record>

        <!-- Invoice Out -->

        <report auto="False"
                id="report_account_invoice_out"
                string="Invoice for Sending"
                model="account.invoice"
                name="l10n_lv_account.invoice_out"
                file="l10n_lv_account.invoice_out"
                report_type="qweb-pdf"/>

        <record id="l10n_lv_account.report_account_invoice_out" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account.report_paperformat_account_portrait"/>
        </record>

    </data>
</openerp>
