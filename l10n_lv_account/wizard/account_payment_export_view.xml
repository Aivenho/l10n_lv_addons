<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_payment_export_view" model="ir.ui.view">
            <field name="name">Account Payment Export</field>
            <field name="model">account.payment.export</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Account Payment Export">
                    <group>
                        <field name="format" attrs="{'readonly': [('data_file','!=',False)]}"/>
                        <field name="name" attrs="{'invisible': [('data_file','!=',False)]}"/>
                        <field name="data_file" filename="name" attrs="{'invisible': [('data_file','=',False)]}"/>
                    </group>
                    <footer attrs="{'invisible': [('data_file','!=',False)]}">
                        <button name="export_file" string="Create File" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window
            id="act_account_payment_export_wizard" name="Export Payments to Bank Import Files"
            res_model="account.payment.export"
            src_model="account.payment"
            view_type="form"
            view_mode="form"
            target="new"
            key2="client_action_multi"
        />

    </data>
</openerp>