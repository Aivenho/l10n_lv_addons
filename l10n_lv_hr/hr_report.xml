<?xml version="1.0"?>
<openerp>
  <data>

        <record id="report_paperformat_hr_contract" model="report.paperformat">
            <field name="name">HR Contract</field>
            <field name="margin_top" eval="20"/>
            <field name="margin_left" eval="30"/>
            <field name="margin_bottom" eval="20"/>
            <field name="margin_right" eval="20"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
        </record>

        <report 
            id="report_l10n_lv_hr_contract"
            string="Employee Contract"
            model="hr.contract" 
            report_type="qweb-pdf"
            file="l10n_lv_hr.employee_contract_report" 
            name="l10n_lv_hr.employee_contract_report"
        />

        <record id="l10n_lv_hr.report_l10n_lv_hr_contract" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_hr.report_paperformat_hr_contract"/>
        </record>

  </data>
</openerp>
