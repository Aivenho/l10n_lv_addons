<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

<!-- Access groups -->

    <record id="base.group_hr_reader" model="res.groups">
        <field name="name">HR Reader</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="base.group_hr_instructor" model="res.groups">
        <field name="name">HR Instructor</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('base.group_hr_reader'))]"/>
    </record>

    <record id="group_multiple_emp_id_vat" model="res.groups">
        <field name="name">Use Multiple Personal ID / TIN for Countries</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

</data>
<data noupdate="1">

<!-- Access rules -->

    <record id="hr.hr_emp_comp_rule" model="ir.rule">
        <field name="name">Employee multi company rule</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

</data>
</openerp>