<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_form_l10n_lv" model="ir.ui.view">
            <field name="name">partner.form.l10n.lv</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="type" position="before">
                    <field name="company_registry" attrs="{'invisible': [('is_company','=',False)]}"/>
                    <field name="identification_id" attrs="{'invisible': [('is_company','=',True)]}"/>
                </field>
            </field>
        </record>

        <record id="view_partner_simple_form_l10n_lv" model="ir.ui.view">
            <field name="name">res.partner.simplified.form.l10n.lv</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form"/>
            <field name="arch" type="xml">
                <field name="category_id" position="before">
                    <field name="company_registry" attrs="{'invisible': [('is_company','=',False)]}"/>
                    <field name="identification_id" attrs="{'invisible': [('is_company','=',True)]}"/>
                </field>
            </field>
        </record>

        <record id="view_partner_tree_l10n_lv" model="ir.ui.view">
            <field name="name">res.partner.tree.l10n.lv</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="display_name" position="after">
                    <field name="company_registry"/>
                    <field name="identification_id"/>
                </field>
            </field>
        </record>

       <record id="view_res_partner_filter_l10n_lv" model="ir.ui.view">
            <field name="name">res.partner.select.l10n.lv</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="company_registry" filter_domain="['|', ('company_registry','=',self), ('identification_id','=',self)]" string="Registration No / Identification No"/>
                </field>
            </field>
        </record>

    </data>
</openerp>