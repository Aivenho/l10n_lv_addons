<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

    <record id="group_document_reader" model="res.groups">
        <field name="name">Reader: all</field>
        <field name="category_id" ref="base.module_category_knowledge_management"/>
<!--        <field name="implied_ids" eval="[(3, ref('base.group_document_user'))]"/> -->
        <field name="comment">the user will have access to all records in Knowledge Pages section, but only for reading. However, for these access rights to take place, the User access rights must be deselected.</field>
    </record>

    <record id="group_document_writer" model="res.groups">
        <field name="name">Writer: all</field>
        <field name="category_id" ref="base.module_category_knowledge_management"/>
        <field name="implied_ids" eval="[(4, ref('group_document_reader'))]"/>
        <field name="comment">the user will have access to all records in Knowledge Pages section. However, for these access rights to take place, the User access rights must be deselected.</field>
    </record>

</data>
<data noupdate="1">

    <record id="document_page_rule_allowed_pages" model="ir.rule">
        <field name="name">Allowed Pages</field>
        <field ref="model_document_page" name="model_id"/>
        <field name="domain_force">['|',('group_ids','in',[g.id for g in user.groups_id]),('group_ids','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_document_user'))]"/>
    </record>

    <record id="document_page_rule_allowed_pages_read" model="ir.rule">
        <field name="name">Allowed Pages (Reading)</field>
        <field ref="model_document_page" name="model_id"/>
        <field name="perm_read" eval="False"/>
        <field name="domain_force">['|',('group_ids','in',[g.id for g in user.groups_id]),('group_ids','=',False)]</field>
        <field name="groups" eval="[(4, ref('group_document_reader'))]"/>
    </record>

    <record id="document_page_rule_allowed_pages_write" model="ir.rule">
        <field name="name">Allowed Pages (Writing)</field>
        <field ref="model_document_page" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_document_writer'))]"/>
    </record>

</data>
</openerp>