<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="asset_card_report_document">
    <t>
        <div class="page">
            <style type="text/css">
                td, th {
                    padding-left: 4px;
                    padding-right: 4px;
                    padding-top: 2px;
                    padding-bottom: 2px;
                }
                table.depr {
                    border: 1px solid black;
                }
                table.depr td, th {
                    border: 1px solid black;
                    font-weight: normal;
                }
                table.depr th {
                    text-align: center;
                    vertical-align: middle;
                }
            </style>
            <h2>
                <div width="100%">
                    <span style="font-weight: bold; font-size: 16px;">Company name, company registry</span><span t-if="o.company_id and o.company_id.company_registry">,</span>
                    <span style="font-size: 16px;" t-esc="o.company_id and o.company_id.name or ''"/>
                    <span style="font-size: 16px;" r-esc="o.company_id and o.company_id.company_registry or ''"/>
                </div>
                <span style="font-weight: bold; font-size: 18px;">ASSET TRACKING CARD No</span>
                <span style="font-weight: bold; font-size: 18px;" t-esc="o.code"/>
            </h2>
	        <table width="100%">
		        <tbody>
			        <tr>
				        <td colspan="2">Asset object name</td>
				        <td style="border-left: 1px solid black;">Code</td>
				        <td style="text-align:center; border:thin solid; background-color: #F2F2F2;" t-esc="o.code"/>
				        <td>Depreciation norm code</td>
				        <td style="text-align:center; border:thin solid; background-color: #F2F2F2;" t-esc="o.category_id.name"/>
			        </tr>
			        <tr>
				        <td colspan="2" style="border:thin solid; background-color: #F2F2F2;" t-esc="o.name"/>
				        <td style="border-right: 1px solid black;" colspan="2"></td>
				        <td colspan="2"></td>
			        </tr>
			        <tr>
				        <td colspan="2">Location</td>
				        <td style="border-left: 1px solid black;">Count</td>
				        <td style="border:thin solid; text-align:center; background-color: #F2F2F2;">1</td>
				        <td colspan="2"></td>
			        </tr>
                    <t t-set="amort_percent" t-value="((o.purchase_value/((o.method_period*o.method_number)/12))*100)/o.purchase_value"></t>
			        <tr>
				        <td colspan="2" style="border:thin solid; background-color: #F2F2F2;"></td>
				        <td style="border-right: 1px solid black;" colspan="2"></td>
				        <td>Amortization rate per year, %</td>
				        <td style="border:thin solid; text-align:right; background-color: #F2F2F2;" t-esc="amort_percent and formatLang(amort_percent) or ''"/>
			        </tr>
                    <t t-set="amort_val" t-value="o.purchase_value/((o.method_period*o.method_number)/12)"></t>
			        <tr>
				        <td>Put into service date</td>
				        <td style="border:thin solid; text-align:center; background-color: #F2F2F2;" t-esc="formatLang(o.purchase_date, date=True)"/>
				        <td>
                            <span>Initial book value</span>
                            (<span t-esc="o.currency_id and o.currency_id.symbol or ''"/>)
                        </td>
				        <td style="border:thin solid; text-align:right; background-color: #F2F2F2;" t-esc="formatLang(o.purchase_value)"/>
				        <td style="text-align:right">
                            <span>amount</span>
                            (<span t-esc="o.currency_id and o.currency_id.symbol or ''"/>)
                        </td>
				        <td style="border:thin solid; text-align:right; background-color: #F2F2F2;" t-esc="amort_val and formatLang(amort_val) or ''"/>
			        </tr>
                    <t t-set="usage_years" t-value="(o.method_period*o.method_number)/12"></t>
                    <t t-set="amort_month_perc" t-value="((o.purchase_value/(o.method_period*o.method_number))*100)/o.purchase_value"></t>
			        <tr>
				        <td>Time of valid usage (years)</td>
				        <td style="border:thin solid; text-align:center; background-color: #F2F2F2;" t-esc="usage_years and formatLang(usage_years) or ''"/>
				        <td>
                            <span>Liquidation (scrap) value</span>
                            (<span t-esc="o.currency_id and o.currency_id.symbol or ''"/>)
                        </td>
				        <td style="border:thin solid; text-align:right; background-color: #F2F2F2;" t-esc="formatLang(o.salvage_value)"/>
				        <td>The same per month, %</td>
				        <td style="border:thin solid; text-align:right; background-color: #F2F2F2;" t-esc="amort_month_perc and formatLang(amort_month_perc) or ''"/>
			        </tr>
                    <t t-set="amort_month_val" t-value="o.purchase_value/(o.method_period*o.method_number)"></t>
			        <tr>
				        <td>The same in months</td>
				        <td style="border:thin solid; text-align:center; background-color: #F2F2F2;" t-esc="int(o.method_period*o.method_number) or ''"/>
				        <td>
                            <span>Depreciation amount for one month</span>
                            (<span t-esc="o.currency_id and o.currency_id.symbol"/>)
                        </td>
				        <td style="border:thin solid; background-color: #F2F2F2;"></td>
				        <td style="text-align:right">
                            <span>amount</span>
                            (<span t-esc="o.currency_id and o.currency_id.symbol"/>)
                        </td>
				        <td style="border:thin solid; text-align:right; background-color: #F2F2F2;" t-esc="amort_month_val and formatLang(amort_month_val) or ''"/>
			        </tr>
			        <tr>
				        <td colspan="2"></td>
				        <td style="border-left: 1px solid black; border-right: 1px solid black;" colspan="2"></td>
				        <td colspan="2">Notes</td>
			        </tr>
			        <tr>
				        <td>Disposal date</td>
				        <td style="border:thin solid; background-color: #F2F2F2;"></td>
				        <td colspan="2"></td>
				        <td colspan="2" style="border:thin solid; background-color: #F2F2F2;"></td>
			        </tr>
			        <tr>
				        <td colspan="2">and justification</td>
				        <td style="border-left: 1px solid black; border-right: 1px solid black;" colspan="2"></td>
				        <td colspan="2" style="border:thin solid; background-color: #F2F2F2;"></td>
			        </tr>
			        <tr>
				        <td colspan="2" style="border:thin solid; background-color: #F2F2F2;"><font color="#F2F2F2">just.</font></td>
				        <td colspan="2"></td>
				        <td colspan="2" style="border:thin solid; background-color: #F2F2F2;"></td>
			        </tr>
		        </tbody>
	        </table>
	        <br/>
	        <table class="depr" width="100%" t-if="o.state != 'draft'">
		        <thead>
			        <tr>
				        <th rowspan="2" width="10%">Date</th>
				        <th rowspan="2">Description of business transaction and document number and date</th>
				        <th rowspan="2">Purchase or production cost</th>
				        <th rowspan="2">Reconstruction</th>
				        <th colspan="2">Revaluation</th>
				        <th rowspan="2">Book value</th>
				        <th rowspan="2">Depreciation</th>
				        <th rowspan="2">Residual value</th>
			        </tr>
			        <tr>
				        <th width="10%">increase</th>
				        <th width="10%">decrease</th>
			        </tr>
		        </thead>
		        <tbody>
			        <tr style="background-color: #F2F2F2;">
				        <td t-esc="formatLang(o.purchase_date, date=True)"/>
				        <td>Asset commissioning</td>
				        <td style="text-align:right" t-esc="formatLang(o.purchase_value)"/>
				        <td style="color: #F2F2F2;">...</td>
				        <td style="color: #F2F2F2;">...</td>
				        <td style="color: #F2F2F2;">...</td>
				        <td style="text-align:right" t-esc="formatLang(o.purchase_value)"/>
				        <td style="color: #F2F2F2;">...</td>
				        <td style="text-align:right" t-esc="formatLang(o.purchase_value)"/>
			        </tr>
			        <tr t-foreach="o.depreciation_line_ids" t-as="line" style="background-color: #F2F2F2;">
                        <t t-if="line.move_check">
				            <td t-esc="formatLang(line.depreciation_date, date=True)"/>
				            <td>Depreciation</td>
				            <td style="text-align:right" t-esc="formatLang(line.asset_id.purchase_value)"/>
				            <td style="color: #F2F2F2;">...</td>
				            <td style="color: #F2F2F2;">...</td>
				            <td style="color: #F2F2F2;">...</td>
				            <td style="text-align:right" t-esc="formatLang(float('%0.2f' % (line.remaining_value + line.amount)))"/>
				            <td style="text-align:right" t-esc="formatLang(line.amount)"/>
				            <td style="text-align:right" t-esc="formatLang(line.remaining_value)"/>
                        </t>
			        </tr>
		        </tbody>
	        </table>
        </div>
    </t>
</template>

<template id="asset_card_report">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'company_id.partner_id.lang', 'l10n_lv_account_asset.asset_card_report_document')"/>
        </t>
    </t>
</template>

</data>
</openerp>