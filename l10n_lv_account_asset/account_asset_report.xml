        <!-- Asset Card -->

        <record id="report_paperformat_asset_card" model="report.paperformat">
            <field name="name">Asset Card</field>
            <field name="margin_top" eval="30"/>
            <field name="margin_left" eval="20"/>
            <field name="margin_bottom" eval="20"/>
            <field name="margin_right" eval="20"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
        </record>

        <report
            id="report_account_asset_card"
            string="Asset Card"
            model="account.asset.asset" 
            report_type="qweb-pdf"
            file="l10n_lv_account_asset.asset_card_report" 
            name="l10n_lv_account_asset.asset_card_report"
        />

        <record id="l10n_lv_account_asset.report_account_asset_card" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account_asset.report_paperformat_asset_card"/>
        </record>

        <!-- Asset Paperformat Portrait -->

        <record id="report_paperformat_asset_portrait" model="report.paperformat">
            <field name="name">Asset Portrait</field>
            <field name="margin_top" eval="10"/>
            <field name="margin_left" eval="20"/>
            <field name="margin_bottom" eval="10"/>
            <field name="margin_right" eval="10"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
        </record>

        <!-- Asset Confirmation -->

        <report
            id="report_account_asset_confirmation"
            string="Asset Confirmation"
            model="account.asset.asset" 
            report_type="qweb-pdf"
            file="l10n_lv_account_asset.asset_confirmation_report" 
            name="l10n_lv_account_asset.asset_confirmation_report"
        />

        <record id="l10n_lv_account_asset.report_account_asset_confirmation" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account_asset.report_paperformat_asset_portrait"/>
        </record>

        <!-- Asset Turnover -->

        <report
            id="report_account_asset_turnover"
            string="Asset Turnover"
            model="account.asset.asset" 
            report_type="qweb-pdf"
            file="l10n_lv_account_asset.asset_turnover_report" 
            name="l10n_lv_account_asset.asset_turnover_report"
        />

        <record id="l10n_lv_account_asset.report_account_asset_turnover" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_lv_account_asset.report_paperformat_asset_portrait"/>
        </record>

