<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_bank_statement_import_view" model="ir.ui.view">
            <field name="name">Import Bank Statements l10n_lv</field>
            <field name="model">account.bank.statement.import</field>
            <field name="inherit_id" ref="account_bank_statement_import.account_bank_statement_import_view"/>
            <field name="arch" type="xml">
                <ul id="statement_format" position="inside">
                    <label for="format"/>
                    <field name="format" class="oe_inline"/>
                </ul>
                <field name="data_file" position="before">
    	            <field name="imported_statement_ids" attrs="{'invisible': ['|', ('format','!=','fidavista'), '&amp;', ('format','=','fidavista'), ('data_file','=',False)]}">
    		            <tree editable="bottom" create="0" edit="0" delete="0" colors="red:wrong_balance==True;blue:wrong_balance==False">
    		                <field name="wrong_balance" invisible="1"/>
    		                <field name="last_statement"/>
    		                <field name="last_balance_end"/>
    		                <field name="currency_id" invisible="1"/>
    		            </tree>
    	            </field>
                    <separator/>
                </field>
                <field name="data_file" position="after">
                    <group col="4" invisible="1">
                        <field name="currency_id" invisible="1" colspan="2"/>
                        <field name="wrong_balance" invisible="1" colspan="2"/>
                    </group>
    	            <field name="importing_statement_ids" attrs="{'invisible': ['|', ('format','!=','fidavista'), '&amp;', ('format','=','fidavista'), ('data_file','=',False)]}">
    		            <tree editable="bottom" create="0" edit="0" delete="0" colors="red:wrong_balance==True;blue:wrong_balance==False">
    		                <field name="wrong_balance" invisible="1"/>
    		                <field name="current_statement"/>
    		                <field name="current_balance_start"/>
    		                <field name="currency_id" invisible="1"/>
    		            </tree>
    	            </field>
                    <group attrs="{'invisible': [('wrong_balance','=',False)]}">
    		            <p colspan="2"><font color="red"><b>Balances do not match!</b></font></p>
                        <p colspan="2"><font color="red">The Ending Balance of the last Bank Statement (by date) imported for one of the the Bank Accounts is not equal to the Starting Balance of this document.</font></p>
    		            <field name="flag"/>
                    </group>
                </field>
            </field>
        </record>

    </data>
</openerp>