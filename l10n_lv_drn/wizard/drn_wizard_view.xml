<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--Natural Resources Tax Decalaration for Latvia form-->
        <record model="ir.ui.view" id="view_drn_declaration_wizard_form">
            <field name="name">drn.declaration.wizard.form</field>
            <field name="model">drn.return.wizard</field>
            <field type="xml" name="arch">
                <form string="Natural Resources Tax Decalaration for Latvia">
                    <group states="draft" col="4">
                        <field name="name" colspan="4"/>
                        <field name="type_id" colspan="4"/>
                        <field name="performer" colspan="4"/>
                        <field name="responsible" colspan="4"/>
                        <field name="date_start" colspan="2"/>
                        <field name="date_stop" colspan="2"/>
                        <field name="state" invisible="1" colspan="4"/>
                    </group>
                    <group states="error,warning" colspan="4" expand="1">
                        <notebook>
                            <page string="Log">
                                <field name="logs" colspan="4" nolabel="1"/>
                            </page>
                            <page string="Message">
                                <field name="message" colspan="4" nolabel="1" readonly="1"/>
                            </page>
                        </notebook>
                    </group>
                    <footer>
                        <button name="process_next" states="draft,error,warning" context="{'logging':True}" type="object" string="Next" class="oe_highlight oe_right"/>
                        <!--<button name="confirm" colspan="2" states="draft" context="{"logging":True}" type="object" string="Next" class="oe_highlight oe_right"/>
                        <button states="error" colspan="2" type="object" name="force_confirm" string="Next" class="oe_highlight oe_right"/>-->
                        <button string="Cancel" special="cancel" class="oe_right"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Log form-->
        <record model="ir.ui.view" id="view_drn_return_error_form">
            <field name="name">drn.return.error.form</field>
            <field name="model">drn.return.log</field>
            <field type="xml" name="arch">
                <form string="Log">
                    <separator colspan="4" string="Message"/>
                    <field colspan="4" nolabel="1" name="name" readonly="1"/>
                    <group>
                        <group>
                            <field name="product_id" readonly="1" attrs="{'invisible':[('product_id','=',False)]}"/>
                            <field name="move_id" readonly="1" attrs="{'invisible':[('move_id','=',False)]}"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!--Log tree-->
        <record model="ir.ui.view" id="view_drn_return_error_tree">
            <field name="name">drn.return.error.tree</field>
            <field name="model">drn.return.log</field>
            <field type="xml" name="arch">
                <tree colors="red:type=='error';blue:type=='warning2'" string="Log">
                    <field name="type" invisible="1"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
