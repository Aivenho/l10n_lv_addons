<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <!-- Stock transfer details wizard -->
        <record id="view_stock_enter_transfer_details" model="ir.ui.view">
            <field name="name">Enter transfer details</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='item_ids']/tree/field[@name='lot_id']" position="attributes">
                    <attribute name="context">{'product_id': product_id, 'name_get_location_id': sourceloc_id, 'lot_id': lot_id, 'location': sourceloc_id}</attribute>
                    <attribute name="domain">[('product_id','=?', product_id), ('product_id.qty_available','>',0.0)]</attribute>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="context">{'uom':product_uom_id, 'sourceloc_id': sourceloc_id}</attribute>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree/field[@name='sourceloc_id']" position="attributes">
                    <attribute name="context">{'product_id': product_id}</attribute>
                    <attribute name="on_change">sourceloc_id_change(sourceloc_id,context)</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>