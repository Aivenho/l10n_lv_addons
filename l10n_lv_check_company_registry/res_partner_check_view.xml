            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_lv_partner_address.view_partner_form_inherit_partner_address"/>
            <field name="arch" type="xml">

                <field name="company_registry" position="after">
                    <group colspan="2" attrs="{'invisible': ['|', ('is_company','=',False), ('company_registry','=',False)]}">
                        <div>
                            <field name="load_from_registry" nolabel="1" class="oe_inline" on_change="onchange_load_from_registry(load_from_registry, company_registry)"/>
                            <label for="load_from_registry"/>
                        </div>
                    </group>
                </field>

            </field>
        </record>

    </data>
</openerp>